<?xml version="1.0"?>
<PCF
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="../../../../../../pcf.xsd">
  <InputSet
    id="CovTermInputSet"
    mode="Direct">
    <Require
      name="term"
      type="gw.api.domain.covterm.CovTerm"/>
    <Require
      name="openForEdit"
      type="boolean"/>
    <Variable
      initialValue="new una.pageprocess.CovTermInputSet(term, openForEdit)"
      name="pcfController"/>
    <CovTermDirectInput
      editable="term.isCovTermEditable(term.Clause.OwningCoverable)"
      id="DirectTermInput"
      label="term.Pattern.DisplayName"
      required="term.Pattern.Required"
      validationExpression="una.pageprocess.CovTermPOCHOEInputSet.validate(term.Clause.OwningCoverable, term as gw.api.domain.covterm.DirectCovTerm)"
      value="term">
      <PostOnChange
        onChange="pcfController.onChange()"/>
    </CovTermDirectInput>
  </InputSet>
</PCF>