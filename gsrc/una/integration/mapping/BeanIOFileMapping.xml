            <field name="increasedPremiumAmountDue" length="8"  justify="left"/>
            <field name="maximumPremiumAmountDue" length="8"  justify="left"/>
            <field name="premiumAmountDueDate" length="8"  justify="left"/>
            <field name="payableName" length="50" justify="left"/>
            <field name="remittanceStreet" length="60" justify="left"/>
            <field name="remittanceCity" length="30" justify="left"/>
            <field name="remittanceState" length="2" justify="left"/>
            <field name="remittanceZip" length="5" justify="left"/>
            <field name="remittanceCountry" length="3" justify="left"/>
            <field name="remittancePhone" length="15" justify="left"/>
            <field name="floodZoneRated" length="3" justify="left"/>
            <field name="floodZoneCurrent" length="3" justify="left"/>
            <field name="grandfathered" length="1" justify="left"/>
            <field name="communityName" length="50" justify="left"/>
            <field name="communityNumberORMapNumber" length="15" justify="left"/>
            <field name="elevation" length="3" justify="left"/>
            <field name="notes" length="190" justify="left"/>
        </record>
    </stream>

    <!--  Property Inspection Inbound File layout configuration-->
    <stream name="PropertyInspectionsInboundFileMapping" format="csv">
        <record name="DetailRecord" class="una.model.PropertyInspectionsInboundData">
            <field name="policyNumber" trim="true"/>
            <field name="policyTerm" trim="true"/>
            <field name="notes" trim="true"/>
        </record>
    </stream>

    <!-- Error Records file layout configuration : Used for all inbound integrations -->
    <stream name="FailedRecordsFileMapping" format="fixedlength">
        <record name="DetailRecord" class="map">
            <field name="recordText" type="string" length="unbounded"/>
        </record>
    </stream>


</beanio>