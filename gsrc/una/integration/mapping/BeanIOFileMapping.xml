<beanio xmlns="http://www.beanio.org/2012/03">
    <!--
        Record Names should be any of the following names:
            HeaderRecord          : Represents the file header record, if exists
            BatchHeaderRecord     : Represents the batch header record, if file contains multiple batches. Ex: parent record and child records
            DetailRecord          : Represents the detail record
            BatchTrailerRecord    : Represents the batch trailer record, if the file contains multiple batches.
            TrailerRecord         : Represents the file trailer record, if exists
    -->

    <!--  LexisFirst Outbound File layout configuration-->
    <stream name="LexisFirstOutBoundIntegration" format="fixedlength">
        <record name="DetailRecord" class="una.model.LexisFirstFileData">
            <field name="recordTypeIndicator" length="1" justify="left" />
            <field name="customerTransactionID" length="10" justify="left" />
            <field name="transactionCreationDate" length="8"  justify="left"/>
            <field name="actionEffectiveDate" length="8" justify="left"/>
            <field name="policyEffectiveFromDate" length="8"  justify="left"/>
            <field name="policyExpirationDate" length="8"  justify="left"/>
            <field name="policyNumber" length="20" justify="left"/>
            <field name="commercialPolicy" length="1" justify="left"/>
            <field name="actionCode" length="3" justify="left" />
            <field name="policyTypeCode" length="5" justify="left" />
            <field name="insuredName1Type" length="1" justify="left"/>
            <field name="insuredName1LastName" length="30" justify="left"/>
            <field name="insuredName1FirstName" length="30" justify="left"/>
            <field name="insuredName2Type" length="1" justify="left"/>
            <field name="insuredName2LastName" length="30" justify="left"/>
            <field name="insuredName2FirstName" length="30" justify="left"/>
            <field name="insuredStreet" length="60" justify="left"/>
            <field name="insuredCity" length="30" justify="left"/>
            <field name="insuredState" length="2" justify="left"/>
            <field name="insuredZip" length="5" justify="left"/>
            <field name="insuredCountry" length="3" justify="left"/>
            <field name="propertyStreet" length="60" justify="left"/>
            <field name="propertyCity" length="30" justify="left"/>
            <field name="propertyState" length="2" justify="left"/>
            <field name="propertyZip" length="5" justify="left"/>
            <field name="propertyCountry" length="3" justify="left"/>
            <field name="loanNumber" length="30" justify="left"/>
            <field name="mortgageeName" length="50" justify="left"/>
            <field name="mortgageeStreet" length="60" justify="left"/>
            <field name="mortgageeCity" length="30" justify="left"/>
            <field name="mortgageeState" length="2" justify="left"/>
            <field name="mortgageeZip" length="5" justify="left"/>
            <field name="mortgageeCountry" length="3" justify="left"/>
            <field name="mortgageeInterestType" length="2" justify="left"/>
            <field name="coverageTypeCode1" length="4" justify="left"/>
            <field name="coverageAmount1" length="10" justify="left"/>
            <field name="deductible1" length="10" justify="left"/>
            <field name="coverageTypeCode2" length="4" justify="left"/>
            <field name="coverageAmount2" length="10" justify="left"/>
            <field name="deductible2" length="10" justify="left"/>
            <field name="coverageTypeCode3" length="4" justify="left"/>
            <field name="coverageAmount3" length="10" justify="left"/>
            <field name="deductible3" length="10" justify="left"/>
            <field name="coverageTypeCode4" length="4" justify="left"/>
            <field name="coverageAmount4" length="10" justify="left"/>
            <field name="deductible4" length="10" justify="left"/>
            <field name="coverageTypeCode5" length="4" justify="left"/>
            <field name="coverageAmount5" length="10" justify="left"/>
            <field name="deductible5" length="10" justify="left"/>
            <field name="coverageTypeCode6" length="4" justify="left"/>
            <field name="coverageAmount6" length="10" justify="left"/>
            <field name="deductible6" length="10" justify="left"/>
            <field name="coverageTypeCode7" length="4" justify="left"/>
            <field name="coverageAmount7" length="10" justify="left"/>
            <field name="deductible7" length="10" justify="left"/>
            <field name="coverageTypeCode8" length="4" justify="left"/>
            <field name="coverageAmount8" length="10" justify="left"/>
            <field name="deductible8" length="10" justify="left"/>
            <field name="coverageTypeCode9" length="4" justify="left"/>
            <field name="coverageAmount9" length="10" justify="left"/>
            <field name="deductible9" length="10" justify="left"/>
            <field name="coverageTypeCode10" length="4" justify="left"/>
            <field name="coverageAmount10" length="10" justify="left"/>
            <field name="deductible10" length="10" justify="left"/>
            <field name="legalDescription" length="50" justify="left"/>
            <field name="insuranceCarrier" length="50" justify="left"/>
            <field name="insuranceCarrierNAIC" length="5" justify="left"/>
            <field name="producerName" length="50" justify="left"/>
            <field name="producerCode" length="15" justify="left" />
            <field name="producerStreet" length="60" justify="left" />
            <field name="producerCity" length="30" justify="left" />
            <field name="producerState" length="2" justify="left" />
            <field name="producerZip" length="5" justify="left"/>
            <field name="producerCountry" length="3" justify="left"/>
